server_host = ldaps://{{ ldapHost }}:636
search_base = cn=users,cn=accounts,{{baseDN}}
server_port = 636
version = 3
bind = yes
bind_dn = uid={{ bindUser }},cn=users,cn=accounts,{{baseDN}}
bind_pw = {{ bindPw }}
query_filter = (&(memberOf=cn=mail,cn=groups,cn=accounts,{{baseDN}})(mail=%s))
# uid is used to identify users
result_attribute = uid
tls_require_cert = no
